{
	"fields": [
    {
      "id": "email",
      "renderer": {
        "type": "text",
        "config": {
          "label": "E-mail",
          "placeholder": "Enter your e-mail"
        }
      },
      "serializer": "auth.email",
      "hidden": true,
      "disabled": true
    },

    {
      "id": "password",
      "renderer": "text",
      "serializer": "auth.password"
    },

    {
      "id": "confirmation",
      "renderer": "text",
      "serializer": null
    },

    {
      "id": "btnSend",
      "renderer": {
        "type": "button",
        "config": {
          "title": "Send",
          "mode": "dark"
        }
      },
      "actions": {
        "onClick": "sendForm"
      }
    },

    {
      "id": "btnClear",
      "renderer": {
        "type": "button",
        "config": {
          "title": "Clear",
          "mode": "dark"
        }
      },
      "actions": {
        "onClick": "clearForm"
      }
    }
  ]
}
