{
  "fields": [
    {
      "id": "email",
      "renderer": {
        "type": "text",
        "config": {
          "label": "E-mail",
          "placeholder": "Enter your e-mail"
        }
      },
      "serializer": "auth.email",
      "hidden": false
    },

    {
      "id": "password",
      "renderer": "text",
      "serializer": "auth.password"
    },

    {
      "id": "confirmation",
      "renderer": "text",
      "serializer": null
    },

    {
      "id": "sex",
      "renderer": {
        "type": "select",
        "config": {
          "label": "Sex",
          "title": "Choose your sex",
          "options": [
            { "id": 0, "title": "Female" },
            { "id": 1, "title": "Male" },
            { "id": 2, "title": "Other" }
          ]
        }
      },
      "actions": {
        "onToggle": "toggleSex"
      }
    },

    {
      "id": "aboutMe",
      "renderer": {
        "type": "textarea",
        "config": {
          "label": "Short bio",
          "placeholder": "Tell us about you...",
          "rows": 5
        }
      },
      "hidden": false
    },

    {
      "id": "btnSend",
      "renderer": {
        "type": "button",
        "config": {
          "title": "Send",
          "color": "dark"
        }
      },
      "actions": {
        "onClick": "sendForm"
      }
    },

    {
      "id": "btnClear",
      "renderer": {
        "type": "button",
        "config": {
          "title": "Clear",
          "color": "dark",
          "outline": true
        }
      },
      "actions": {
        "onClick": "clearForm"
      }
    }
  ]
}
